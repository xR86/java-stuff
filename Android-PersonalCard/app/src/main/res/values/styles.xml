<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"> <!--Theme.AppCompat.Light.DarkActionBar-->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
        <!--<item name="android:fitsSystemWindows">true</item>-->
    </style>


    <!-- Text overlay theme. -->
    <style name="TextOverlayTheme" parent="AppTheme">
        <item name="android:textSize">45sp</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Large</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorOverlayForeground</item>
        <item name="android:background">@color/colorOverlayBackground</item>
    </style>
    <!-- Banner theme. -->
    <style name="BannerTheme" parent="AppTheme">
        <item name="android:paddingTop">@dimen/small_textview_padding</item>
        <item name="android:paddingBottom">@dimen/small_textview_padding</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Large</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/lightBannerForeground</item>
        <item name="android:background">@color/lightBannerBackground</item>
    </style>

</resources>
