<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonOverlayTheme">
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/colorTextA</item>
        <item name="android:textColorLink">@color/colorTextA</item>
    </style>

    <style name="ImageOverlayTheme">
        <item name="android:padding">10dp</item>
        <item name="android:tint">@color/colorPrimary</item>
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">65dp</item>
    </style>

    <style name="TextOverlayTheme">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#efebe9</item>

    </style>

    <style name="TextH2Theme" parent="TextOverlayTheme">
        <item name="android:textSize">@dimen/h2_size</item>
    </style>

    <style name="TextH4Theme" parent="TextOverlayTheme">
        <item name="android:textSize">@dimen/h4_size</item>
    </style>

</resources>
