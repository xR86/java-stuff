<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Custom styles -->
    <style name="MainBtn" parent="AppTheme">
        <item name="android:layout_width">@dimen/main_btn_size</item>
        <item name="android:layout_height">@dimen/main_btn_size</item>
        <!-- needs API level 23 -->
        <!--<item name="android:drawableTint">@color/colorAccent</item>-->
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
        <!-- needs API level 16 -->
        <item name="android:fontFamily">sans-serif-medium</item>
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <style name="RadioBtnStyle" parent="AppTheme">
        <!--<item name="android:width">30dp</item>-->
        <!--<item name="android:height">20dp</item>-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ImgRadioBtnStyle" parent="RadioBtnStyle">
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="CheckboxBtnStyle" parent="AppTheme">
        <!--<item name="android:width">30dp</item>-->
        <!--<item name="android:height">20dp</item>-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewStyle" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="EditTextStyle" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:background">@color/colorNeutral</item>
    </style>
</resources>
